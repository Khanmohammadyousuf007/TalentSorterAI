@model IEnumerable<HrHelper.Models.Application>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recruitment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationStausID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Post.PostId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recruitment.RecruitmentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Candidate.CandidateID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationStausID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ApplicationID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ApplicationID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ApplicationID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
